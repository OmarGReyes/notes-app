<div class="row mt-2">
    {{#each notes}}
    <div class="col-md-3 mt-3">
        <div class="card">
            <div class="card-body">
                <div class="row">                    
                    <h4 class="card-title col-md-10">
                        {{title}}
                    </h4>
                    <a class=" col-md-2" href="/notes/edit/{{_id}}">
                        <i class="far fa-edit"></i>
                    </a>
                </div>
                <p>{{description}}</p>
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger btn-block">Delete note</button>
                    
                </form>

            </div>
        </div>
    </div>
    {{else}}
        <div class="card mx-auto">
            <div class="card-body">
                {{#if user}}
                <h1>Welcome!</h1>
                {{/if}}
                <p class="lead">There are not notes yet.</p>
                <a href="/notes/add" class="btn btn-success btn-block">Create One!</a>
            </div>
        </div>

    {{/each}}
</div>